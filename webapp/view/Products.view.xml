<mvc:View controllerName="globant.productos.controller.Products"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page id="page"  title="{i18n>title}">
		<SearchField
			id="searchField"
			width="50%"
			placeholder="Search for..."
			enableSuggestions="true"
			search=".onSearch"
            suggest=".onSuggest"
			suggestionItems="{
				path: '/Products',
				sorter: { path: 'Name' }
			}">
			<SuggestionItem id="SuggestionItem" text="{Name}" description="{path:'ID'}" key="{ID}" />
		</SearchField>
		
         <content>
     
        <VBox>
           <List id="list" 
                 items="{/Products}" 
                 mode="MultiSelect">
                            <items>
                                <StandardListItem title="{Name}" description="{ID}"></StandardListItem>
                            </items>
                        </List>

                    <Label text="Product ID"/>
					<Input id= "pID" type="Number" value="{productID}"/>

		            <Label text="Name"/>
					<Input id= "pname" type="Text" value="{Name}"/>
                    
					
			   <Button type="Accept" text='Create Product' press='onCreate'></Button>
               <Button type="Accept" text='Update Product' press='onUpdate'></Button>
			   <Button type="Accept" text='Delete  Product' press='onDelete'></Button>
               <Button type="Accept" text='Delete  Multiselect' press='onDeleteSelectedItems'></Button>
                
             
              </VBox> 
             
	  </content>
     </Page> 
</mvc:View>

	