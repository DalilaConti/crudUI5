<mvc:View controllerName="globant.productos.controller.Products"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
      <Title id="_IDGenTitle1" text="{i18n>Customers}"></Title>
      <VBox>
      
		            <Label text="First Name"/>
					<Input type="Text" value="{fname}"/>
					<Label text="Last Name"/>
					<Input type="Text" value="{lname}"/>
					<Label text="Company Name"/>
					<Input type="Text" value="{cname}"/>
					<Label text="City"/>
					<Input type="Text" value="{city}"/>
			
			   </VBox> 
			   <Button type="Accept" text='Save Customer' press='onSave'></Button>
               <Button type="Accept" text='Update Customer' press='onUpdate'></Button>
			   <Button type="Accept" text='Delete  Customer' press='onDelete'></Button>
             
	
      
</mvc:View>